<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verificação de Email da AOL</title>
</head>
<body>
    <h1>Verificação de Email da AOL</h1>
    <form>
        <label for="email">Digite o email da AOL:</label>
        <input type="text" id="email" required>
        <button type="button" id="verificar">Verificar</button>
    </form>
    <p>Resultado:</p>
    <p id="resultado"></p>

    <script>
        const verificarButton = document.getElementById('verificar');
        const resultado = document.getElementById('resultado');

        verificarButton.addEventListener('click', async () => {
            const email = document.getElementById('email').value;
            const response = await fetch(`exemplo.php?email=${encodeURIComponent(email)}`);
            const result = await response.text();
            resultado.textContent = `Resultado: ${result}`;
        });
    </script>
</body>
</html>
