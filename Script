<script> 

<?php
$email = $_GET['email'];
$url = "https://login.aol.com/verify-email/v2/validate?email={$email}";

$response = file_get_contents($url);

if (strpos($response, "Desculpe, não reconhecemos este email.") !== false) {
    echo "não existe";
} elseif (strpos($response, "password-form") !== false || strpos($response, "capture") !== false) {
    echo "existe";
} else {
    echo "desconhecido";
}
?>



<script/>
